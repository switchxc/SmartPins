<Window x:Class="SmartPins.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Настройки SmartPins" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        MinHeight="500" MinWidth="450"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Скругленные углы для Windows 11 -->
            <CornerRadius x:Key="WindowCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="CardCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="ButtonCornerRadius">4</CornerRadius>
            <SolidColorBrush x:Key="SoftBackgroundBrush" Color="#FF1F1F1F"/>
            <SolidColorBrush x:Key="SoftCardBrush" Color="#FF2D2D2D"/>
            <SolidColorBrush x:Key="SoftBorderBrush" Color="#FF404040"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="{StaticResource WindowCornerRadius}"
                Background="{StaticResource SoftBackgroundBrush}"
                BorderBrush="{StaticResource SoftBorderBrush}"
                BorderThickness="1">
            <StackPanel Margin="32">
                <TextBlock Text="Настройки" FontSize="20" FontWeight="Bold" Margin="0,0,0,24" Foreground="#FFCCCCCC"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                    <TextBlock Text="Темная тема" VerticalAlignment="Center" FontSize="16" Margin="0,0,16,0" Foreground="#FFCCCCCC"/>
                    <ToggleButton x:Name="DarkThemeToggle" Width="48" Height="24" Checked="DarkThemeToggle_Checked" Unchecked="DarkThemeToggle_Unchecked"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                    <TextBlock Text="Горячая клавиша" VerticalAlignment="Center" FontSize="16" Margin="0,0,16,0" Foreground="#FFCCCCCC"/>
                    <Button x:Name="HotkeyButton" Content="Изменить" Style="{DynamicResource MaterialDesignOutlinedButton}" Click="HotkeyButton_Click"/>
                </StackPanel>

                <Button Content="Сохранить" Style="{DynamicResource MaterialDesignRaisedButton}" Margin="0,24,0,0" Height="40" FontSize="16" Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 